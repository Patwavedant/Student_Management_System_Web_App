@model SMS.Models.Department


@{
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";

    System.Data.DataTable dt2 = ViewBag.abc;

}

<div class="row">
    <!-- left column -->
    <div class="col-md-6">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Department Edit</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form role="form" action="/Admin/SubmitDepartmentEdit" method="post">
                <div class="box-body">
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" class="form-control" name="DName" value="@Model.DName">
                    </div>
                    <div class="form-group">
                        <label>HOD</label>
                        <select class="form-control" name="HeadID">

                            @for (int i = 0; i < dt2.Rows.Count; i++)
                            {
                                <option @((@dt2.Rows[i]["StaffID"].ToString() == @Model.HeadID.ToString()) ? "selected=selected" : "" ) value="@dt2.Rows[i]["StaffID"]">@dt2.Rows[i]["SName"]</option>
                            }
                        </select>
                    </div>
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    <input type="hidden" name="ID" value="@Model.DepartmentID" />
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
        <!-- /.box -->
    </div>
    <!--/.col (left) -->
</div>





