@model System.Data.DataTable

@{
    
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}


<div class="row">
    <!-- left column -->
    <div class="col-md-12">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">FAQ List</h3>
            </div>
            <div class="box-body">
                <table border="1" class="table table-bordered">
                    <tr>
                        <th>ID</th>
                        <th>Q1.</th>
                        <th>Ans.</th>
                        <th>Action</th>
                    </tr>
                    @for (int i = 0; i < Model.Rows.Count; i++)
                    {
                        <tr>
                            <td>@Model.Rows[i]["FAQID"]</td>
                            <td>@Model.Rows[i]["Question"]</td>
                            <td>@Model.Rows[i]["Answer"]</td>
                            <td><a href="/Admin/FAQEdit?ID=@Model.Rows[i]["FAQID"]">Edit</a></td>
                        </tr>
                    }

                </table>
            </div>
        </div>
        <!-- /.box -->
    </div>
    <!--/.col (left) -->
</div>
