@model System.Data.DataTable

@{
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="row">
    <!-- left column -->
    <div class="col-md-6">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">New Department</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form action="/Admin/SubmitDepartmentNew" method="post">
                <div class="box-body">
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" class="form-control" name="DName">
                    </div>
                    <div class="form-group">
                        <label>HOD</label>
                        <select class="form-control" name="HeadID">

                            @for (int i = 0; i < Model.Rows.Count; i++)
                            {
                                <option value='@Model.Rows[i]["StaffID"]'>@Model.Rows[i]["SName"]</option>
                            }
                        </select>
                    </div>
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
        <!-- /.box -->
    </div>
    <!--/.col (left) -->
</div>






