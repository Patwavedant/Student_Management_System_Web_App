@model SMS.Models.FAQ


@{
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";

    System.Data.DataTable dt2 = ViewBag.abc;

}

<div class="row">
    <!-- left column -->
    <div class="col-md-6">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">FAQ Edit</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form role="form" action="/Admin/SubmitFAQEdit" method="post">
                <div class="box-body">
                    <div class="form-group">
                        <label>Question</label>
                        <input type="text" class="form-control" name="Question" value="@Model.Question">
                    </div>
                    <div class="form-group">
                        <label>Answer</label>
                        <input type="text" class="form-control" name="Answer" value="@Model.Answer">
                    </div>                    
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    <input type="hidden" name="ID" value="@Model.FAQID" />
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
        <!-- /.box -->
    </div>
    <!--/.col (left) -->
</div>





