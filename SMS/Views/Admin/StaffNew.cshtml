@model System.Data.DataTable

@{
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="row">
    <!-- left column -->
    <div class="col-md-6">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">New Staff</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form role="form" action="/Admin/SubmitStaffNew" method="post">
                <div class="box-body">
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" class="form-control" name="SName">
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input type="text" class="form-control" name="Email">
                    </div>
                    <div class="form-group">
                        <label>Phone</label>
                        <input type="text" class="form-control" name="Phone">
                    </div>
                    <div class="form-group">
                        <label>Username</label>
                        <input type="text" class="form-control" name="Username">
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" class="form-control" name="Password">
                    </div>
                    <div class="form-group">
                        <label>Department</label>
                        <select class="form-control" name="DepartmentID">

                            @for (int i = 0; i < Model.Rows.Count; i++)
                            {
                                <option value="@Model.Rows[i]["DepartmentID"]">@Model.Rows[i]["DName"]</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label>StaffType</label>
                        <select class="form-control" name="StaffTpye">
                            <option value="ADMIN">ADMIN</option>
                            <option value="HOD">HOD</option>
                            <option value="STAFF">STAFF</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Is Active</label>
                        <input type="checkbox" name="IsActive" value="1">
                    </div>
                </div>
                <!-- /.box-body -->
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
        <!-- /.box -->
    </div>
    <!--/.col (left) -->
</div>



