@model SMS.Models.Staff

@{
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";

    System.Data.DataTable dt2 = ViewBag.abc;

}

<div class="row">
    <!-- left column -->
    <div class="col-md-6">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Edit Staff</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form role="form" action="/Admin/SubmitStaffEdit" method="post">
                <div class="box-body">
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" class="form-control" name="SName" value="@Model.SName">
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input type="text" class="form-control" name="Email" value="@Model.Email">
                    </div>
                    <div class="form-group">
                        <label>Phone</label>
                        <input type="text" class="form-control" name="Phone" value="@Model.Phone">
                    </div>
                    <div class="form-group">
                        <label>Username</label>
                        <input type="text" class="form-control" name="Username" value="@Model.Username">
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" class="form-control" name="Password" value="@Model.Password">
                    </div>
                    <div class="form-group">
                        <label>Department</label>
                        <select class="form-control" name="DepartmentID">
                            @for (int i = 0; i < dt2.Rows.Count; i++)
                            {
                                <option @((@dt2.Rows[i]["DepartmentID"].ToString() == @Model.DepartmentID.ToString()) ? "selected=selected" : "" ) value="@dt2.Rows[i]["DepartmentID"]">@dt2.Rows[i]["DName"]</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label>StaffType</label>
                        <select class="form-control" name="StaffType">
                            <option @((Model.StaffType == "ADMIN") ? "selected=selected" : "") value="ADMIN">ADMIN</option>
                            <option @((Model.StaffType == "HOD") ? "selected=selected" : "") value="HOD">HOD</option>
                            <option @((Model.StaffType == "STAFF") ? "selected=selected" : "") value="STAFF">STAFF</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Is Active</label>
                        <input type="checkbox" name="IsActive" value="1" @( Model.IsActive ? "checked='checked'" : "") />
                    </div>
                </div>
                <!-- /.box-body -->
                <div class="box-footer">

                    <input type="hidden" name="ID" value="@Model.StaffID" />
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
        <!-- /.box -->
    </div>
    <!--/.col (left) -->
</div>



