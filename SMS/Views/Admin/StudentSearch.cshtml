@model System.Data.DataTable

@{
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="row">
    <!-- left column -->
    <div class="col-md-12">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Student Search</h3>
            </div>
            <div class="box-body">
                <form action="/Admin/StudentSearchResult" method="post">
                    Name: <input type="text" name="Name" value="@Request.Form["Name"]" />
                    <input type="submit" value="Search" />
                    <br />
                    <br />
                </form>
                <table border="1" class="table table-bordered">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>ParentPhone</th>
                        <th>Semester</th>
                        <th>Class</th>
                        <th>Department</th>
                        <th>IsActive</th>                        
                        <th>Actions</th>
                    </tr>
                    @for (int i = 0; i < Model.Rows.Count; i++)
                    {
                        <tr>
                            <td>@Model.Rows[i]["StudentID"]</td>
                            <td>@Model.Rows[i]["Name"]</td>
                            <td>@Model.Rows[i]["Email"]</td>
                            <td>@Model.Rows[i]["Phone"]</td>
                            <td>@Model.Rows[i]["ParentPhone"]</td>
                            <td>@Model.Rows[i]["Semester"]</td>
                            <td>@Model.Rows[i]["Class"]</td>
                            <td>@Model.Rows[i]["DName"]</td>
                            <td>@Model.Rows[i]["IsActive"]</td>
                            <td><a href="/Admin/StudentEdit?ID=@Model.Rows[i]["StudentID"]">Edit</a></td>
                        </tr>
                    }
                </table>
            </div>
        </div>
        <!-- /.box -->
    </div>
    <!--/.col (left) -->
</div>
