@model System.Data.DataTable

@{
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="row">
    <!-- left column -->
    <div class="col-md-12">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Staff List</h3>
            </div>
            <div class="box-body">
                <table border="1" class="table table-bordered">
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Username</th>
                            <th>Password</th>                            
                            <th>Department</th>
                            <th>IsActive</th>
                            <th>Actions</th>
                        </tr>
                        @for (int i = 0; i < Model.Rows.Count; i++)
                        {
                            <tr>
                                <td>@Model.Rows[i]["SName"]</td>
                                <td>@Model.Rows[i]["Email"]</td>
                                <td>@Model.Rows[i]["Phone"]</td>
                                <td>@Model.Rows[i]["Username"]</td>
                                <td>@Model.Rows[i]["Password"]</td>
                                <td>@Model.Rows[i]["DName"]</td>
                                <td>@Model.Rows[i]["IsActive"]</td>
                                <td><a href="/Admin/StaffEdit?ID=@Model.Rows[i]["SName"]">Edit</a></td>
                            </tr>
                        }

                    </table>
              </div>
        </div>
        <!-- /.box -->
    </div>
    <!--/.col (left) -->
</div>


