@model System.Data.DataTable

@{
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<div class="row">
    <!-- left column -->
    <div class="col-md-6">
        <!-- general form elements -->
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">New Circular</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form action="/HOD/SubmitCircularNew" method="post" enctype="multipart/form-data">
                <div class="box-body">
                    <div class="form-group">
                        <label>Title</label>
                        <input type="text" class="form-control" name="Title">
                    </div>
                    <div class="form-group">
                        <label>CFile</label>
                        <input type="file" class="form-control" name="CFile">
                    </div>
                    <div class="form-group">
                        <label>PublishDate</label>
                        <input type="text" class="form-control" placeholder="DD-MM-YYYY" name="PublishDate">
                    </div>                
                <div class="form-group">
                    <label>Is Active</label>
                    <input type="checkbox" name="IsActive" value="1">
                </div>
             </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        </form>
    </div>
        <!-- /.box -->
    </div>
    <!--/.col (left) -->
</div>