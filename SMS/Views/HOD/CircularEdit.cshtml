@model SMS.Models.Circular


    @{
        Layout = "~/Views/Shared/_LayoutPage1.cshtml";

        System.Data.DataTable dt2 = ViewBag.abc;

    }

    <div class="row">
        <!-- left column -->
        <div class="col-md-6">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Circular Edit</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <form role="form" action="/HOD/SubmitCircularEdit" method="post">
                    <div class="box-body">
                        <div class="form-group">
                            <label>Title</label>
                            <input type="text" class="form-control" name="Title" value="@Model.Title">
                        </div>
                        <div class="form-group">
                            <label>CFile</label>
                            <input type="file" class="form-control" name="Cfile" value="@Model.CFile">
                        </div>
                        <div class="form-group">
                            <label>PublishDate</label>
                            <input type="text" class="form-control" name="PublishDate" value="@Model.PublishDate">
                        </div>
                        <div class="form-group">
                            <label>Is Active</label>
                            <input type="checkbox" name="IsActive" value="1" @( Model.IsActive ? "checked='checked'" : "") />
                        </div>
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                        <input type="hidden" name="ID" value="@Model.CircularID" />
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
            <!-- /.box -->
        </div>
        <!--/.col (left) -->
    </div>